<% provide(:title, 'Login page!') %>
<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="alert">
        <% flash.each do |key, value| %>
        <div class="alert alert-<%= key %>">
          <%= value %>
        </div>
        <% end %>
      </div>
      <div class="login-panel panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Please Sign In</h3>
        </div>
        <div class="panel-body">
          <%= form_for :session, url: admin_login_path do |f| %>
            <fieldset>
              <div class="form-group">
                <%= f.email_field :email, class: 'form-control', placeholder: 'Email', autofocus: true %>
              </div>

              <div class="form-group">
                <%= f.password_field :password, class: 'form-control', placeholder: 'Password'%>
              </div>

              <div class="checkbox">
                <label>
                  <%= f.check_box :remember, value: true %>Remember Me
                </label>
              </div>
              <%= f.submit 'Login', class: 'btn btn-primary submit' %>
            </fieldset>
            <% end %>
        </div>
      </div>
    </div>
  </div>
</div>