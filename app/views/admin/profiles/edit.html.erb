<% provide(:title, 'Edit profile') %>
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        Edit your profile
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-6 col-md-offset-3">
            <%= form_for @user, url: admin_profile_url, method: 'put' do |f| %>
              <div class="form-group">
                <%= f.label :email %>
                <%= f.email_field :email, class: 'form-control', disabled: true %>
              </div>

              <div class="form-group">
                <%= f.label :manager_name, 'Full name' %>
                <%= f.text_field :manager_name, class: 'form-control', required: true %>
              </div>

              <div class="form-group">
                <%= f.label :phone %>
                <%= f.text_field :phone, class: 'form-control', required: true %>
              </div>

              <div class="form-group">
                <%= f.label :role %>
                <%= f.select :role, Manager::ROLE, {}, {class: 'form-control'}  %>
              </div>
              <div class="form-group">
                <%= f.label :avatar %>
                <%= f.hidden_field :avatar_cache %>
                <%= f.file_field :avatar, class: 'form-control' %>
              </div>
              
              <%= f.submit 'Update', class: 'btn btn-success' %>
            <% end %>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>